<section class="brands-section" data-aos="zoom-in-up">
  <div class="container">
    <div class="row">
      {% if section.settings.title != blank %}
        <h2 class="title">{{ section.settings.title | escape }}</h2>
      {% endif %}

      {% if section.blocks.size > 0 %}
      <div class="brands-holder brands-holder-{{ section.id }}">

        {% for block in section.blocks %}
        <div class="brands-imgs">

            {% if block.settings.link != blank %}
              <a href="{{ block.settings.link }}" class="logo-bar__link">
            {% endif %}

              {% if block.settings.image != blank %}
                {{ block.settings.image | img_url: 'master' | img_tag: block.settings.image.alt }}
              {% else %}
                {{ 'logo' | placeholder_svg_tag: 'placeholder-svg' }}
              {% endif %}

              {% if block.settings.link != blank %}
                </a>
              {% endif %}

        </div><!--.brands-imgs ends-->
        {% endfor %}

      </div><!--.brands-holder ends-->
      {% endif %}

      {% if section.blocks.size == 0 %}
        {% include 'no-blocks' %}
      {% endif %}
    </div>
  </div>
</section><!--.banner-section ends-->


<script>
function runLogoSlider(){
    jQuery(".brands-holder-{{ section.id }}").slick({
        dots: true,
        vertical: false,
        infinite: true,
        speed: 1500,
        autoplay: false,
        autoplaySpeed: 1500,
        arrows: true,
        centerMode: true,
        slidesToShow: 4,
        slidesToScroll: 4,
        pauseOnHover: true,
        useCSS: true,
        responsive: [
    {
      breakpoint: 991,
      settings: {
        slidesToShow: 3,
        slidesToScroll: 3,
        infinite: true,
        dots: true
      }
    },
    {
      breakpoint: 799,
      settings: {
        slidesToShow: 2,
        slidesToScroll: 2
      }
    },
    {
      breakpoint: 480,
      settings: {
        slidesToShow: 2,
        slidesToScroll: 2
      }
    }
    // You can unslick at a given breakpoint now by adding:
    // settings: "unslick"
    // instead of a settings object
  ]
      });
};

jQuery(document).ready(function() {
  runLogoSlider();
});

jQuery(document).on('shopify:section:load', function(){
  runLogoSlider();
});

</script>



