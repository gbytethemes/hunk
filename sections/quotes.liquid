<section class="quotes-section" data-aos="zoom-in-up">
  <div class="container" data-section-id="{{ section.id }}" data-section-type="quotes">
    {% if section.settings.title != blank %}
      <div class="section-header text-center">
        <h2 class="title">{{ section.settings.title | escape }}</h2>
      </div>
    {% endif %}

    {% case section.blocks.size %}
      {% when 1 %}
        {%- assign column_size = '12' -%}
      {% when 2 %}
        {%- assign column_size = '6' -%}
      {% when 3 %}
        {%- assign column_size = '4' -%}
      {% else %}
        {%- assign column_size = '4' -%}
    {% endcase %}

    {% if section.blocks.size > 0 %}
      <div class="quotes-wrapper">
        <div class="quotes-slider row" id="Quotes-{{ section.id }}" data-count="{{ section.blocks.size }}">
          {% for block in section.blocks %}
            <div class="col-lg-{{ column_size }} col-md-6 col-12 quotes-slide--{{ block.id }}" {{ block.shopify_attributes }}>
              <blockquote class="quotes-slider__text text-center">
                <span class="quote-icon">{% include 'icon-quote' %}</span>
                {% if block.settings.quote != blank %}
                  <div class="rte-setting rte">{{ block.settings.quote }}</div>
                {% endif %}
                {% if block.settings.author != blank %}
                  <cite>{{ block.settings.author | escape }}</cite>
                {% endif %}
              </blockquote>
            </div>
          {% endfor %}
        </div>
      </div>
    {% endif %}

    {% if section.blocks.size == 0 %}
      {% include 'no-blocks' %}
    {% endif %}
  </div>
</section>


{% case section.blocks.size %}
  {% when 1 %}
    {%- assign column_size_1 = '1' -%}
  {% when 2 %}
    {%- assign column_size_1 = '2' -%}
  {% when 3 %}
    {%- assign column_size_1 = '3' -%}
  {% else %}
    {%- assign column_size_1 = '3' -%}
{% endcase %}

{% assign md_size = column_size_1 | minus: 1 %}

{%- if  md_size == 0 -%}
  {%  assign md_size = 1 %}
{%- endif -%}

<script>
function runQuotesSlider(){
    jQuery("#Quotes-{{ section.id }}").slick({
        dots: true,
        vertical: false,
        infinite: true,
        speed: 1500,
        autoplay: true,
        autoplaySpeed: 1500,
        arrows: true,
        centerMode: true,
        slidesToShow: {{ column_size_1 }},
        slidesToScroll: 1,
        pauseOnHover: true,
        useCSS: true,
        responsive: [
    {
      breakpoint: 991,
      settings: {
        slidesToShow: {{ md_size }},
        slidesToScroll: {{ md_size }},
        infinite: true,
        dots: true
      }
    },
    {
      breakpoint: 799,
      settings: {
        slidesToShow: 2,
        slidesToScroll: 2
      }
    },
    {
      breakpoint: 480,
      settings: {
        slidesToShow: 1,
        slidesToScroll: 1
      }
    }
    // You can unslick at a given breakpoint now by adding:
    // settings: "unslick"
    // instead of a settings object
  ]
      });
};

jQuery(document).ready(function() {
  runQuotesSlider();
});

jQuery(document).on('shopify:section:load', function(){
  runQuotesSlider();
});

jQuery(document).on('shopify:section:select', function(){
  runQuotesSlider();
});

</script>

